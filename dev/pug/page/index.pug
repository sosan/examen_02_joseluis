extends ../templates/_template.pug


//- bloque de variableslocales
block variableslocales
    //- variable nos sirve para pasar como parametro en lso mixins
    //- asi los mixins saben que pagina se los envia
    -let currentpage = "index"


//- Si queremos realizar seo pagina especifica
//- sobreescribe el seo general
//- block seo
//-     +generarseocompleto(currentpage)


//- Si queremos un titulo especificico para una pagina
//- sobreescribe el titulo general
//- block title
//-     +showtitulo(currentpage)
block header
    include ../templates/_header.pug

block main
    ul.main__listadoimagenes
        li.listadoimagenes__mujer
            +picture("cara_mujer.webp", "cara mujer recien levantada", "picture__clase")
        li.listadoimagenes__perro
            figure.perro__figure
                +picture("perro.webp", "perro muy simpatico y sonriente", "picture__clase")
                figcaption.figure__figcaption
                    h3.titulo__negrita
                        | Ana Perez & “Superman”
                    p.parrafo__texto
                        | “Superman” vive con su dueña desde hace 3 años. Pastor alemán.
            img(class="seleccion", src="./assets/img/svg/flecha_seleccion.svg", alt="seleccion de quien es el amo")
        li.listadoimagenes__hombre
            +picture("cara_hombre.webp", "cara hombre preocupado", "picture__clase")
        li.listadoimagenes__gato
            figure.gato__figure
                +picture("gato.webp", "gato gris con ojos saltones", "picture__clase")
                img(class="seleccion", src="./assets/img/svg/flecha_seleccion.svg", alt="seleccion de quien es el amo")
                figcaption.figure__figcaption
                    h3.titulo__negrita
                        | David Socias & “Gatito”
                    p.parrafo__texto
                        | “Gatito” vive con su dueño desde hace 2 meses. Toyger.